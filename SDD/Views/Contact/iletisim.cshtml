
@{
    Layout = null;
}
<style>
 
body, html {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
    font-weight: 300;
    background-color: #f9f9f9;
}


header {
    background-color:rgba(181, 0, 0, 0.833); 
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
}

.logo-container {
    display: inline-block;
   
}

.logo-container .logo {
    height: 50px;
    width: auto;
    margin-left: 53px; 
    transform: scale(3.7); 
    transform-origin:center; 
}



.menu-container {
    display: flex;
    align-items: center;
}


.menu {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0;
}

.menu li {
    margin-right: 30px; 
}

.menu li:last-child {
    margin-right: 15; 
}

.menu li a {
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 300;
    transition: color 0.3s, font-weight 0.3s;
}

.menu li a:hover {
    color: #000000;
    font-weight: 500;
}



.user-button {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background-color: rgb(228, 191, 191);
    color: #000;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s;
}

.user-button:hover {
    background-color: #ddd;
}

.dropdown-menu {
    display: none; 
    position: absolute;
    right: 20px;
    top: 60px;
    background-color: rgb(228, 191, 191);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    list-style: none;
    padding: 10px 0;
    margin: 0;
}

.dropdown-menu li {
    padding: 8px 20px;
}

.dropdown-menu li a {
    color: #000;
    text-decoration: none;
    font-size: 0.9rem;
    display: block;
    transition: background-color 0.3s;
}

.dropdown-menu li a:hover {
    background-color: rgba(66, 8, 8, 0.1);
}


.menu-container:hover .dropdown-menu {
    display: block;
}






.iletisim-baslik {
    text-align: center;
    margin: 30px 0;
}

.iletisim-baslik h2 {
    font-family: 'Georgia', serif; 
    font-size: 36px;
    font-weight: 500;
    color: #800000;
    letter-spacing: 2px;
    margin: 5;
}


.iletisim-container {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    text-align: center;
    height: 200px;
    margin: 20px auto;
    gap: 20px;
}

.iletisim-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    width: auto; 
    height: auto; 
    border: none; 
    border-radius: 0; 
    box-shadow: none; 
    transition: transform 0.3s ease; }

.iletisim-item a {
    text-decoration: none;
    color: #800000;
    font-size: 16px;
    transition: transform 0.3s ease, color 0.3s ease;
}

.iletisim-item a:hover {
    color: #a52a2a; 
    transform: scale(1.1); 
}

.iletisim-item i {
    font-size: 40px;
    color: #800000;
    transition: transform 0.3s ease; 
}

.iletisim-item i:hover {
    transform: scale(1.1);
}
.map-container {
    margin: 30px auto;
    max-width: 80%; 
    border-radius: 10px; 
    overflow: hidden; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); 
}

.map-container iframe {
    width: 100%; 
    height: 450px; 
    border: none;
}

</style>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menü ve İletişim</title>
    <link rel="stylesheet" href="iletisim.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
   
    
    <header>
        <div class="logo-container">
            <img src="~/images/logo2.png" alt="Logo" class="logo">
        </div>
        
        <nav class="menu-container">
            <ul class="menu">
                <li><a href="/HomePage/AnaSayfa">Ana Sayfa</a></li>
                <li><a href="/NewAnalyse/AddAnalyse">Yeni Analiz</a></li>
                <li><a href="#gecmis-analizler">Geçmiş Analizler</a></li>
                <li><a href="/Coment/ComentPage">Yorumlar</a></li>
            </ul>

            <button class="user-button" id="userButton">
                <i class="bi bi-person-lines-fill"></i>
            </button>

            <ul class="dropdown-menu" id="dropdownMenu">
                <li><a href="#ayarlar">Ayarlar</a></li>
                <li><a href="#cikis">Çıkış Yap</a></li>
            </ul>
        </nav>
    </header>

   
    <main>
        <section id="iletisim" class="iletisim-baslik">
            <h2>İLETİŞİM</h2>
        </section>

        <section class="iletisim-container">
            <div class="iletisim-item">
                <a href="tel:+905387542398" target="_blank">
                    <i class="bi bi-telephone-fill"></i>
                    <h4>Telefon</h4>
                    <p>+90 538 754 2398</p>
                </a>
            </div>
            <div class="iletisim-item">
                <a href="https://www.google.com/maps/place/Biruni+%C3%9Cniversitesi/41.0178962,28.9138507,17z/data=!3m1!4b1!4m6!3m5!1s0x14cabbb1ade07b4d:0x41372ea4b54356d2!8m2!3d41.0178922!4d28.9164256!16s%2Fg%2F1q5jpwm52?entry=ttu&g_ep=EgoyMDI0MTIxMS4wIKXMDSoASAFQAw%3D%3D" target="_blank">
                    <i class="bi bi-geo-alt-fill"></i>
                    <h4>Adres</h4>
                    <p>SDD Clinic İstanbul</p>
                </a>
            </div>
            <div class="iletisim-item">
                <a href="mailto:info@clinic-istanbul.com" target="_blank">
                    <i class="bi bi-envelope-fill"></i>
                    <h4>E-Mail</h4>
                    <p>info@sddclinic-istanbul.com</p>
                </a>
            </div>
            <div class="iletisim-item">
                <a href="https://www.whatsapp.com/?lang=tr_TR" target="_blank">
                    <i class="bi bi-whatsapp"></i>
                    <h4>WhatsApp</h4>
                    <p>+90 549 120 16 00</p>
                </a>
            </div>
            <div class="iletisim-item">
                <a href="tel:+908502000000" target="_blank">
                    <i class="bi bi-headset"></i>
                    <h4>Çağrı Merkezi</h4>
                    <p>+90 850 200 12 40</p>
                </a>
            </div>
        </section>

      
        <div class="map-container">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3010.336374504136!2d28.91385067551441!3d41.01789621883338!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabbb1ade07b4d%3A0x41372ea4b54356d2!2sBiruni%20%C3%9Cniversitesi!5e0!3m2!1str!2str!4v1734258964648!5m2!1str!2str" 
                width="600" 
                height="450" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy" 
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </main>

   
    <script>
        const userButton = document.getElementById('userButton');
        const dropdownMenu = document.getElementById('dropdownMenu');

        userButton.addEventListener('click', () => {
            dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
        });

        document.addEventListener('click', (e) => {
            if (!userButton.contains(e.target) && !dropdownMenu.contains(e.target)) {
                dropdownMenu.style.display = 'none';
            }
        });
    </script>
</body>
</html>
